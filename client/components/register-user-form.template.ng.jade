.register-user-form
	form.clearfix(novalidate name="form" ng-submit="submit()")
		.form-group
			label(for="name") Name
			input.form-control(
				type="name"
				id="name"
				name="name"
				ng-model="user.name"
				required
				ng-trim="true"
				autofocus
			)
		.form-group
			label(for="email") Email
			input.form-control(
				type="email"
				id="email"
				name="email"
				ng-model="user.email"
				required
				ng-trim="true"
			)
		.form-group
			label(for="password") Password
			input.form-control(
				type="password"
				id="password"
				name="password"
				ng-model="user.password"
				required
				ng-minlength="5"
				ng-maxlength="50"
			)
		.form-group
			label(for="confirmPassword") Confirm Password
			input.form-control(
				type="password"
				id="confirmPassword"
				name="confirmPassword"
				ng-model="user.confirmPassword"
				required
				compare-to="user.password"
			)

		.alert.alert-warning(ng-show="showValidationErrors && form.$invalid")
			div(ng-show="form.name.$error.required") Name is required.
			div(ng-show="form.email.$error.required") Email is required.
			div(ng-show="form.email.$error.email") Email format is invalid.
			div(ng-show="form.password.$error.required") Password is required.
			div(ng-show="form.password.$error.minlength") Password must be between 5-50 characters.
			div(ng-show="form.password.$error.maxlength") Password must be between 5-50 characters.
			div(ng-show="form.confirmPassword.$error.compareTo") Confirm Password must match.

		.pull-right
			button.btn.btn-primary(type="submit")
				span Register