.form-group.attribute-user-input
	label.control-label.col-lg-4(ng-bind="::attribute.name")
	.col-lg-8
		.input-group
			.form-control-static(ng-bind="userDisplayName")
			.input-group-btn
				button.btn.btn-default(ng-click="lookupUser()" type="button")
					i.fa.fa-search
				button.btn.btn-default(ng-click="clearUser()" ng-disabled="!hasValue()" type="button")
					i.fa.fa-close