.service-value-configuration
	.form-group
		label Name
		input.form-control.input-sm(
			type="text"
			ng-model="service.configuration.name"
		)
	.form-group
		label Type
		select.form-control.input-sm(
			ng-options="type.value as type.name for type in dataTypes"
			ng-model="service.configuration.data_type"
			ng-change="typeUpdated()"
		)
	.form-group(ng-show="showDocumentSelection()")
		label Document Type
		select.form-control.input-sm(
			ng-options="documentSchema._id as documentSchema.name for documentSchema in documentSchemas"
			ng-model="service.configuration.document_schema_id"
			ng-change="typeUpdated()"
		)
	.form-group(ng-show="showValue()")
		label Value
		.service-value
