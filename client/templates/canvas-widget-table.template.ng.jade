.canvas-widget.canvas-widget-table
	.widget-summary
		h4 
			i.fa(ng-class="icon")
			span {{widget.name}}
	.widget-configuration
		.setting
			span.name Data Source
			span.value {{getDataSourceName()}}
			span.value(ng-hide="getDataSourceName()") (none)
	.widget-controls(ng-show="editMode")
		button.btn.btn-xs.btn-primary(ng-click="configureWidget()")
			i.fa.fa-wrench
		button.btn.btn-xs.btn-default(ng-click="deleteWidget()")
			i.fa.fa-trash