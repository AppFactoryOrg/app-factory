.login-view(ng-controller="LoginCtrl")
	.panel.panel-default
		.panel-body
			h3 Login
			form(novalidate name="form" ng-submit="submit()")
				.form-group
					label(for="email") Email
					input.form-control(
						type="email"
						id="email"
						name="email"
						ng-model="email"
						required
						autofocus
					)
				.form-group
					label(for="password") Password
					input.form-control(
						type="password"
						id="password"
						name="password"
						ng-model="password"
						required
					)

				.alert.alert-warning(ng-show="showValidationErrors && form.$invalid")
					ul
						li(ng-show="form.email.$error.required") Email is required.
						li(ng-show="form.email.$error.email") Email format is invalid.
						li(ng-show="form.password.$error.required") Password is required.

				button.btn.btn-primary(type="submit")
					span Login

				button.btn.btn-link(type="button" ui-sref="register")
					span Register