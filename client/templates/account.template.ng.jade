.account-view(ng-controller="AccountCtrl")
	.clearfix
		h1.pull-left Account
		button.btn.btn-xs.btn-link.pull-right(type="button" ng-click="logout()") 
			span Log out
			i.fa.fa-sign-out

	hr/
	
	tabset
		tab(heading="Applications")
			.application-summary.well(ng-repeat="application in applications")
				.name {{application.name}}

				.controls.pull-right
					button.btn.btn-xs.btn-info(ng-click="edit(application)")
						i.fa.fa-pencil
						span Edit

				i.icon.fa.fa-gear

			.clearfix
				button.btn.btn-success.pull-right(type="button" ng-click="createApplication()") Create
