.account-view
	.clearfix
		h1.pull-left Account
		button.btn.btn-xs.btn-link.pull-right(type="button" ng-click="logout()") 
			span Log out
			i.fa.fa-sign-out
	br/
	
	.ibox
		.ibox-title 
			h5 Applications
		.ibox-content
			.application-summary.well(ng-repeat="application in applications")
				.name {{application.name}}

				.controls.pull-right
					button.btn.btn-xs.btn-info(
						ui-sref="factory.dashboard({ application_id: application['_id'], environment_id: application['default_environment_id'] })"
					)
						i.fa.fa-pencil
						span Edit

				i.icon.fa.fa-gear

			.clearfix
				button.btn.btn-success.pull-right(type="button" ng-click="createApplication()") 
					span New Application
					i.fa.fa-plus

